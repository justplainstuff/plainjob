  "devDependencies": {
    "@types/better-sqlite3": "^7.6.10",
    "@types/node": "^20",
    "@vitest/coverage-v8": "^2.0.3",
    "better-sqlite3": "^11.0.0",
    "changelogen": "^0.5.5",
    "tsup": "^8.2.4",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4",
    "vitest": "^2.0.1"
