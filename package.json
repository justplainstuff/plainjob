{
  "name": "plainjobs",
  "version": "0.0.4",
  "description": "A queue based on SQLite capable of processing 40k jobs/s.",
  "type": "commonjs",
  "main": "dist/plainjobs.js",
  "types": "dist/plainjobs.d.ts",
  "files": [
    "dist",
