{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": [
      "**/.git/**",
      "**/node_modules/**",
      "**/dist/**",
      "**/.turbo/**",
      "**/tsup.config.bundled*",
      "**/coverage/**"
    ]
  },
  "linter": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  }
}
